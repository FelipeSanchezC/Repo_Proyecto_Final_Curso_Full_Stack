<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">
                        Crear nueva Persona 
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post" enctype="multipart/form-data">
                    <div class="input-group mt-2">
                        <label for="firstname" class="input-group-text">Nombre Persona</label>
                        <input class="form-control" type="text" name="firstname" id="firstname" placeholder="Ejemplo: Juan Felipe" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="lastname" class="input-group-text">Apellido Persona</label>
                        <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Sanchez Camacho" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Edad Persona</label>
                        <input class="form-control" type="number" name="age" id="age" placeholder="Ejemplo: 18" autofocus required>
                    </div>
                    
                    <div class="input-group mt-2">
                        <label for="observacion" class="input-group-text">Observacion</label>
                        <input class="form-control" type="text" name="observacion" id="observacion" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <input class="form-control" type="file" name="file" id="file">
                    </div>

                    <div class="for-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>